FROM golang:1.25-alpine

WORKDIR /app

# Install air
RUN go install github.com/air-verse/air@latest

COPY go.mod go.sum ./
RUN go mod download

COPY . .

# Pre-build the binary during image build (has more memory available)
# This avoids the initial build in the container
RUN mkdir -p ./tmp && go build -o ./tmp/main ./cmd/api/main.go

EXPOSE 8080

CMD ["air"]